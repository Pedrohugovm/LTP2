<Gerenciador>:
    Menu:
        name: 'menu'
    Tarefas:
        name: 'tarefas'
    
<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding:100
        spacing:20
        Button:
            text: 'Tarefas'
            on_release: app.root.current='tarefas'
        Button:
            text: 'Exercicio'
        Button:
            text: 'Sair'
            on_release: app.stop()

<Tarefas>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            BoxLayout:
                id: box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height